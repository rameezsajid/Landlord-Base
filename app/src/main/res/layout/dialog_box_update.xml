<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="50dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:background="@drawable/background_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:id="@+id/linearLayout3">

        <EditText
            android:id="@+id/editTextPropertyLocation_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_add_properties"
            android:hint="Enter Property Location"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextPropertyAddress_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_add_properties"
            android:hint="Enter Property Address"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextPropertyPostcode_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_add_properties"
            android:hint="Enter Property Postcode"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Type:"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"/>

        <Spinner
            android:id="@+id/spinnerProperty_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:entries="@array/properties"
            android:textAlignment="center"
            android:background="@drawable/et_add_properties"/>

        <EditText
            android:id="@+id/editTextBedrooms_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_add_properties"
            android:hint="Number of Bedrooms"
            android:inputType="number"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>


        <EditText
            android:id="@+id/editTextRent_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_add_properties"
            android:hint="Enter Amount Monthly Rental"
            android:inputType="number"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextPropertyTenancyLength_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_add_properties"
            android:hint="Enter Tenancy Length"
            android:layout_marginBottom="15dp"
            android:inputType="number"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextPropertyTenantName_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_add_properties"
            android:hint="Enter Tenant Name"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextManagementName_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_add_properties"
            android:hint="Enter Management Name"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/editTextRefurbished_Update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/et_add_properties"
            android:hint="Enter Amount for Refurb"
            android:layout_marginBottom="15dp"
            android:gravity="center"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnUpdate_Update"
            android:text="Update"
            android:background="@drawable/button_properties"
            android:layout_marginBottom="25dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnDelete_Update"
            android:text="Delete"
            android:layout_marginBottom="25dp"
            android:background="@drawable/button_properties"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btnClose_Update"
            android:background="@drawable/button_properties"/>

    </LinearLayout>

</ScrollView>