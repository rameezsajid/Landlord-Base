<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PropertyActivity">

    <EditText
        android:id="@+id/editTextPropertyLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Property Location" />

    <Spinner
        android:id="@+id/spinnerProperty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:entries="@array/properties" />


    <Button
        android:id="@+id/buttonAddProperty"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Property" />


    <ListView
        android:id="@+id/listViewProperties2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>